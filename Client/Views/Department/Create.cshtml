@model Server.Models.Department

@{
    ViewData["Title"] = "Create";
    
}


<div class="row">
    <div class="col-sm-9">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>Create New Department</h2>
                <hr />
            </div>
            <div class="card-body">
                <form action="/Department/Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="Name" class="col-sm-2 control-label">Department Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Code" class="col-sm-2 control-label">Code</label>
                        <div class="col-sm-10">
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <br />
                <a href="Index">Back to List</a>
            </div>  
        </div>
    </div>
</div>




