@model Server.DTOs.Employees.RegisterLeaveDto

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-1"></div>
    <div class="col">
        <div class="card mx-auto mb-3 border-0">
            <div class="card-body">
                <div>
                    <h1 class="card-header bg-info text-white text-center">Form Leave Request</h1>
                    <br />
                    <form action="/LeaveRequest/Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="LeaveType" class="control-label">Leave Type</label>
                            <select class="form-control" asp-for="LeaveType" aria-label="Floating label select example">
                                <option selected>Open this select menu</option>
                                <option value="0">Vacation</option>
                                <option value="1">Sick</option>
                                <option value="2">Personal</option>
                                <option value="3">Other</option>
                            </select>
                            <span asp-validation-for="LeaveType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Leave Start - Leave End</label>
                            
                            <input type="text" class="form-control" name="daterange" value="" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LeaveStart" class="control-label" hidden>Leave Start</label>
                            <input asp-for="LeaveStart" class="form-control" type="date" hidden/>
                            <span asp-validation-for="LeaveStart" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="LeaveEnd" class="control-label" hidden>Leave End</label>
                            <input asp-for="LeaveEnd" class="form-control" type="date" hidden/>
                            <span asp-validation-for="LeaveEnd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Notes" class="control-label">Notes</label>
                            <input asp-for="Notes" class="form-control" />
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Attachment" class="form-label">Attachment</label>
                            <input asp-for="Attachment" class="form-control" type="file" />
                            <span asp-validation-for="Attachment" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>

                        
                    </form>
                </div>
                <br />
                <div>
                    <a asp-action="Account">Back to List</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-1"></div>

</div>



@section Scripts {
    <script>
        const Token = '@Context.Session.GetString("JWToken")'
        $(function () {
            $('input[name="daterange"]').daterangepicker({
                opens: 'left',
                minDate: moment().startOf('day'),
                startDate: moment().add(1, 'days'),
                endDate: moment().add(1, 'days')
            }, function (start, end, label) {
                //console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
                $('input[name="LeaveStart"]').val(start.format('YYYY-MM-DD'));
                $('input[name="LeaveEnd"]').val(end.format('YYYY-MM-DD'));

                // Update the daterange input's value
                $(this).val(start.format('YYYY-MM-DD') + ' - ' + end.format('YYYY-MM-DD'));
            });
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
