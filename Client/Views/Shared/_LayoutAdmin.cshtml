<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
@if (TempData["Success"] != null)
{
    <script>
        Swal.fire({
            title: 'Success!',
            text: '@TempData["Success"]',
            icon: 'success'
        });
    </script>
}

@if (TempData["Error"] != null)
{
    <script>
        Swal.fire({
            title: 'Error!',
            text: '@TempData["Error"]',
            icon: 'error'
        });
    </script>
}
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a asp-action="Index" asp-controller="Dashboard" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <img src="~/uploads/web-icon/metrodata.webp" style="width: 50px"/>
                        </span>
                        <span class="app-brand-text demo menu-text fw-bolder ms-2 text-capitalize">Leave APP</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item active">
                        @if (User.IsInRole("manager") || User.IsInRole("employee") || User.IsInRole("admin"))
                        {
                            <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="menu-link">
                                <i class="menu-icon tf-icons bx bx-home-circle"></i>
                                <div data-i18n="Analytics">Dashboard</div>
                            </a>
                        }
                        
                    </li>

                    <!-- Layouts -->
                   
                        @*<a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-layout"></i>
                            <div data-i18n="Layouts">Leave Application</div>
                        </a>*@



                    @if (User.IsInRole("admin") || User.IsInRole("manager"))
                    {
                        <li class="menu-item">
                            <a asp-area="" asp-controller="Employee" asp-action="Index" class="menu-link">
                                <i class="menu-icon fas fa-solid fa-users"></i>
                                <div data-i18n="Without menu">Employee</div>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a asp-area="" asp-controller="Department" asp-action="Index" class="menu-link">
                                <i class="menu-icon fas fa-light fa-building"></i>
                                <div data-i18n="Without navbar">Department</div>
                            </a>
                        </li>

                    }
                        
                    @if (User.IsInRole("admin"))
                    {
                        <li class="menu-item">
                            <a asp-area="" asp-controller="Account" asp-action="Detail" class="menu-link">
                                <i class="menu-icon fas fa-solid fa-user-tie"></i>
                                <div data-i18n="Without menu">Account</div>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a asp-area="" asp-controller="AccountRole" asp-action="Info" class="menu-link">
                                <i class="menu-icon fas fa-solid fa-circle-user"></i>
                                <div data-i18n="Without menu">Account Role</div>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a asp-area="" asp-controller="Role" asp-action="Index" class="menu-link">
                                <i class="menu-icon fas fa-regular fa-address-book"></i>
                                <div data-i18n="Without navbar">Role</div>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a asp-area="" asp-controller="LeaveRequest" asp-action="IndexAdmin" class="menu-link">
                                <i class="menu-icon fas fa-solid fa-envelope-open-text"></i>
                                <div data-i18n="Container">Leave Request</div>
                            </a>
                        </li>
                    }

                    

                    @if ( User.IsInRole("employee"))
                    {
                        <li class="menu-item">
                            <a asp-area="" asp-controller="LeaveRequest" asp-action="Account" class="menu-link">
                                <i class="menu-icon fas fa-regular fa-pen-to-square"></i>
                               
                                <div data-i18n="Without menu">Leave Request Employee</div>
                            </a>
                        </li>
                    }
                            
                    @if (User.IsInRole("manager"))
                    {
                        <li class="menu-item">
                            <a asp-area="" asp-controller="LeaveRequest" asp-action="Index" class="menu-link">
                                <i class="menu-icon fas fa-solid fa-envelope-open-text"></i>
                                <div data-i18n="Container">Leave Request</div>
                            </a>
                        </li>
                    }
                       
                    
                </ul>
